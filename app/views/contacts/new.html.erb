<!DOCTYPE html>
<html>
<%= render 'home/template/header' %>
<body>
  <div class="wrapper">
    <%= render 'home/template/bodyHeader' %>
        <main class="content">
          <!-- contact -->
          <section class="contact section" id="contact">
            <div class="inner">
              <h2 class="title">CONTACT</h2>
              <%= form_with model: @contact, url: confirm_path do |f| %>
            <div id="emailHelp" class="form-text">*は必須項目です。</div>
            <br>
            <div class="form-floating mb-3">
              <%= f.text_field :name, autofocus: true, class: 'form-control', id: "floatingInput", placeholder: "name"%>
              <label for="name">お名前*</label>
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>

            <div class="form-floating mb-3">
              <%= f.text_field :phone_number, autofocus: true, class: 'form-control', id: "floatingInput", placeholder: "phone_number"%>
              <label for="phone_number">電話番号(ハイフンなし)</label>
            </div>

            <div class="form-floating mb-3">
              <%= f.text_field :email, autofocus: true, class: 'form-control', id: "floatingInput", placeholder: "email"%>
              <label for="email">返信先emailアドレス*</label>
            </div>

            <div class="mb-3">
              <label for="subject" class="form-label">用件*</label>
              <%= f.select :subject, {'作曲依頼': 1, 'その他': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
            </div>

            <div class="form-floating">
              <%= f.text_area :message, class:"form-control", placeholder:"Leave a comment here", id:"floatingTextarea2", style:"height: 100px" %>
              <label for="message">メッセージ*</label>
            </div>
              <br>
            <div>
              <%= f.submit '入力内容確認'  ,class: "btn btn-outline-primary"%>
            </div>
          <% end %>
        </div>
      </section>
      <!-- /contact -->
    </main>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script type='text/javascript' src="js/script.js"></script>
</body>
<%= render 'home/template/footer' %>
</html>