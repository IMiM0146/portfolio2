<%= render 'home/template/header' %>
<br>
<div class="page-header">
    <h1 class="display-4">お問い合わせ</h1>
</div>
<br>
<div id="emailHelp" class="form-text">*は必須項目です。</div>
<table>
  <tbody>
    <tr>
      <td class="text-center" style="width: 30%;">お名前</td>
      <td><%= @contact.name %></td>
    </tr>
    <tr>
      <td class="text-center" style="width: 30%;">返信先emailアドレス</td>
      <td><%= @contact.email %></td>
    </tr>
    <tr>
      <td class="text-center" style="width: 30%;">用件</td>
      <td><%= @contact.subject %></td>
    </tr>
    <tr>
      <td class="text-center">メッセージ</td>
      <td style="white-space: pre-wrap;"><%= @contact.message %></td>
    </tr>
  </tbody>
</table>

<%= form_with model: @contact do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :phone_number %>
  <%= f.hidden_field :subject %>
  <%= f.hidden_field :message %>
  <div><%= f.submit '送信'  ,class: "btn btn-outline-primary"%></div>
<% end %>
<%= form_with model:  @contact, url: back_path do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :phone_number %>
  <%= f.hidden_field :subject %>
  <%= f.hidden_field :message %>
  <div><%= f.submit '入力画面に戻る'  ,class: "btn btn-outline-danger"%></div>
<% end %>
<%= render 'home/template/footer' %>